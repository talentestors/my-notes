# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.tsx]
indent_size = 2

[*.jsx]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

[*.html]
indent_size = 2

[*.vue]
indent_size = 2
